<h1>Search a song</h1>

<%= form_for @song do |f| %>
  <% if @song.errors.any? %>
      <h2>Invalid petition, the errors were:</h2>
      <ul>
          <% @song.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
      </ul>
  <% end %>

  <p>
    
    <%= f.text_field :petition%>
    Find by:
    <%=f.select :petition, ['Song','Artist','Album'] %>
    <%= f.submit 'search' %>
    <%= f.label :petition %>
  </p>
  

    

<% end %>


